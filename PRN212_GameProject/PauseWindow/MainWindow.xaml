<Window x:Class="PauseWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PauseWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid Background="Gray">
        <TextBlock Text="Game Paused" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
        <Button Content="Resume" Width="100" Height="40" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30" Click="ResumeButton_Click"/>
    </Grid>
</Window>
